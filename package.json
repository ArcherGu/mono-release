{
  "name": "mono-release",
  "version": "0.0.0",
  "packageManager": "pnpm@10.26.2",
  "description": "A tiny monorepo release tool",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/mono-release.git"
  },
  "keywords": [
    "monorepo",
    "release"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mor": "dist/cli.js",
    "mono-release": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "conventional-changelog-cli": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "conventional-changelog-cli": {
      "optional": true
    }
  },
  "dependencies": {
    "@esm2cjs/execa": "6.1.1-cjs.1",
    "bundle-require": "^5.1.0",
    "cac": "^6.7.14",
    "check-package-exists": "^1.2.2",
    "colorette": "^2.0.20",
    "esbuild": "^0.27.0",
    "fs-extra": "^11.3.2",
    "joycon": "^3.1.1",
    "prompts": "^2.4.2",
    "semver": "^7.7.3",
    "strip-json-comments": "^5.0.3"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "1.0.139",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.10.4",
    "@types/prompts": "2.4.9",
    "@types/semver": "7.7.1",
    "conventional-changelog-cli": "5.0.0",
    "eslint": "9.39.2",
    "lint-staged": "16.2.7",
    "simple-git-hooks": "2.13.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
