{
  "name": "mono-release",
  "version": "0.0.0",
  "description": "A tiny monorepo release tool",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/mono-release.git"
  },
  "keywords": [
    "monorepo",
    "release"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mono-release": "dist/release.js",
    "mono-publish": "dist/publish.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "conventional-changelog-cli": "^2.2.2"
  },
  "peerDependenciesMeta": {
    "conventional-changelog-cli": {
      "optional": true
    }
  },
  "dependencies": {
    "bundle-require": "^3.0.4",
    "check-package-exists": "^1.1.0",
    "esbuild": "^0.14.44",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "joycon": "^3.1.1",
    "minimist": "^1.2.6",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "semver": "^7.3.7",
    "strip-json-comments": "^4.0.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "0.0.2",
    "@types/fs-extra": "9.0.13",
    "@types/minimist": "1.2.2",
    "@types/node": "18.0.0",
    "@types/prompts": "2.0.14",
    "@types/semver": "7.3.10",
    "conventional-changelog-cli": "2.2.2",
    "eslint": "8.17.0",
    "lint-staged": "13.0.1",
    "simple-git-hooks": "2.8.0",
    "tsup": "6.1.2",
    "typescript": "4.7.3",
    "vitest": "0.15.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}